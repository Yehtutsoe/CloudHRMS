@model ShiftViewModel

<h1>Shift Entry Form</h1>
<form action="/shift/Entry" method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" placeholder="Enter Name" />
    </div>
        <div class="mb-3">
        <label for="InTime" class="form-label">InTime</label>
        <input type="time" name="InTime" class="form-control" placeholder="Enter In Time" />
    </div>
        <div class="mb-3">
        <label for="OutTime" class="form-label">OutTime</label>
        <input type="time" name="OutTime" class="form-control" placeholder="Enter Out Time" />
    </div>
      
    <div class="mb-3">
        <label for="LateAfter" class="form-label">Late After</label>
        <input type="time" name="LateAfter" class="form-control" placeholder="Enter Late After" />
    </div>
      
    <div class="mb-3">
        <label for="EarlyOutTime" class="form-label">Early Out Before</label>
        <input type="time" name="EarlyOutBefore" class="form-control" placeholder="Enter Early Out Before" />
    </div>
    <div class="mb-3">
        <label for="AttendancePolicy" class="form-lable">Attendance Policy</label>
        <select class="form-select" id="AttendancePolicy" name="AttendancePolicyId">
            <option selected>[Select One]</option>
            @foreach (var attendancePolicy in Model.AttendancePolicyViewsModel)
            {
                <option value="@attendancePolicy.Id">@attendancePolicy.Name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="/shift/list" class="btn btn-warning">Cancel</a>
    </div>
    
</form>
