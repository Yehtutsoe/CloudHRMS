
<head>
	<!--for JQuery plugin-->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
@model IList<PositionViewModel>
@{
	if (TempData["Msg"] != null)
	{
		if (Convert.ToBoolean(TempData["IsOccourError"]))
		{
			<div class="alert alert-success">
				@TempData["Msg"]
			</div>
		}
		else
		{
			<div class="alert alert-danger">
				@TempData["Msg"]
			</div>
		}
	}
}
<h1>Positon List Information</h1>
<a href="/position/entry" class="btn btn-success mb-3">Create</a>
<table class="table table-hover" id="positionTable">

	<thead class="table-dark">
		<tr>
			<th scope="col">No</th>
			<th scope="col">Position Code</th>
			<th scope="col">Description</th>
			<th scope="col">Level</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	@{
		int i = 1;
	}

	<tbody>

		@foreach (var position in Model)
		{
			<tr>
				<td scope="row">@i</td>
				<td>@position.Code</td>
				<td>@position.Description</td>
				<td>@position.Level</td>
				<td>
					<a href="/position/Edit?id=@position.Id" class="btn btn-success">Edit</a>
					<a href="/position/Delete?id=@position.Id" class="btn btn-danger" onclick="confirm('Are you sure want to Delete')">Delete</a>
				</td>
			</tr>
			i++;
		}
	</tbody>
</table>
<script>
	$(document).ready(function () {
		$('#positionTable').DataTable();
	});
</script>