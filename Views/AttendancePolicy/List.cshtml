<head>
	<!--for JQuery plugin-->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
@model IList<AttendancePolicyViewModel>

<table class="table table-hover" id="attendanceTable">
	<thead class="table-dark">
		<tr>
			<th scope="col">No</th>
			<th scope="col">Name</th>
			<th scope="col">Number of Late Times</th>
			<th scope="col">Number Of Early Out Times</th>
			<th scope="col">Deduction In Amount</th>
			<th scope="col">Deduction In Day</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	@{
		var i = 1;
	}
	<tbody>
		@foreach (var attendancePolicy in Model)
		{
			<tr>
				<td scope="row">@i</td>
				<td scope="row">@attendancePolicy.Name</td>
				<td scope="row">@attendancePolicy.NumberOfLateTimes</td>
				<td scope="row">@attendancePolicy.NumberOfEarlyOutTimes</td>
				<td scope="row">@attendancePolicy.DeductionInAmount</td>
				<td scope="row">@attendancePolicy.DeductionInDay</td>
				<td scope="row">
					<a href="/AttendancePolicy/Edit?id=@attendancePolicy.Id" class="btn btn-primary">Edit</a>
					<a href="/AttendancePolicy/Delete?id=@attendancePolicy.Id" class="btn btn-danger" onclick="confirm('Are you sure want to delete')">Delete</a>
				</td>
			</tr>
			i++;
		}
	</tbody>
</table>
<script>
	$(document).ready(function () {
		$('#attendanceTable').DataTable();
	});
</script>
